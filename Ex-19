>>> def binomial_coeff(n,k):
	return binomial_coeff(n-1, k) + binomial_coeff(n-1, k-1) if k != 0 and n != 0 else (1 if k == 0 else 0)

>>> binomial_coeff(2,3)
0


#  Using Memo

>>> cache = {}
>>> def binomial_coeff(n,k):
	if n and k in cache:
		return cache[n,k]
	return binomial_coeff(n-1, k) + binomial_coeff(n-1, k-1) if k != 0 and n != 0 else (1 if k == 0 else 0)
